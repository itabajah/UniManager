{
  "name": "unimanager",
  "version": "1.0.0",
  "description": "Tollab - Academic management web application for Technion students",
  "main": "index.html",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint js/*.js",
    "lint:fix": "eslint js/*.js --fix",
    "serve": "npx http-server -p 8080 -o",
    "validate": "html-validate index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/unimanager.git"
  },
  "keywords": [
    "technion",
    "university",
    "academic",
    "course-management",
    "student"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "html-validate": "^8.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/firebase-config.js",
      "!js/firebase-config.example.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "moduleFileExtensions": [
      "js"
    ]
  }
}
